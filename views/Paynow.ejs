.Card{

	text-align:center;
	width:480px;
	height:360px;
	border-radius:74% 82% 70% 88%;
	padding:20px;
	background-color:rgba(225, 255, 0, 0.9);
	cursor:pointer;
	z-index:1;
	transition:.5s;
	color:#000000;
    margin-left: 500px;
    margin-bottom: 90px;
}
.Card:before,
.Card:after{
	content:'';
	position:absolute;
	top:0px;
	left:0px;
	width:100%;
	height:100%;
	z-index:-1;
	animation:RotateDiv 5s linear infinite;
}
.Card:before{
	border-radius:130% 151% 189% 166%;
	background-color:rgba(208, 255, 0, 0.7);
	animation-delay:0s;
	transition:.5s;
}
.Card:after{
	border-radius:145% 86% 80% 90%;
	background-color:rgba(200, 255, 0, 0.3);
	animation-delay:.2s;
	transition:.5s;
}
.Card:hover{
	background-color:rgba(173, 173, 167, 0.8);
	color:rgb(0, 0, 0);
}
.Card:hover:after{
	background-color: rgba(194, 195, 186, 0.7);
}
.Card:hover:before{
	background-color: rgba(213, 214, 205, 0.3);
}
.Card div{
	display:table-cell;
	vertical-align:middle;
}
.Card div h2{
	font-size:25px;
}
.Card div p{
	margin-top:20px;
	font-size:18px;
}
@keyframes RotateDiv{
	0%{
		transform:rotate(0deg);
	}
	100%{
		transform:rotate(360deg);
	}
}


</style>
